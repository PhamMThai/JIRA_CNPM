<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h2>{{productdetail.name}}</h2>
      <img src="/public/images/{{productdetail.image_url}}" alt="/public/images/{{productdetail.name}}" class="mt-4" width="500px">
      <p>{{productdetail.description}}</p>
    </div>

    <!-- Thông tin sản phẩm -->
    <div class="col-md-4 mt-4">
      <div class="card mb-3" style="width: 400px; height: 410px;">
        <div class="card-body">
          <h5 class="card-title">Chi tiết sản phẩm</h5>
          <table class="table">
            <tbody>
              <tr>
                <th scope="row">Tên</th>
                <td>{{productdetail.name}}</td>
              </tr>
              <tr>
                <th scope="row">Giá</th>
                <td><span class="money" id="formattedPrice">{{productdetail.price}} VNĐ</span></td>
              </tr>
              <tr>
                <th scope="row">Màn Hình</th>
                <td>{{productdetail.screen}}</td>
              </tr>
              <tr>
                <th scope="row">Chip</th>
                <td>{{productdetail.chip}}</td>
              </tr>
              <tr>
                <th scope="row">RAM</th>
                <td>{{productdetail.ram}}</td>
              </tr>
              <tr>
                <th scope="row">Pin</th>
                <td>{{productdetail.pin}}</td>
              </tr>
              <tr>
                <th scope="row">Hãng</th>
                <td>{{productdetail.brand}}</td>
              </tr>
            </tbody>
          </table>
        </div>
        <a type="button" class="btn btn-primary" href="/Product/detail/{{productdetail.slug}}/buy">Mua ngay</a>
      </div>
    </div>
  </div>
</div>
