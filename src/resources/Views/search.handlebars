<div class="container mt-4">
  <h3>Kết quả tìm kiếm cho "{{keyword}}"</h3>
  <div class="row mt-4">
    {{#each products}}
    <div class="col-sm-4 col-lg-3 mb-3">
      <div class="card" style="height: 100%;">
        <a href="/Product/{{this.slug}}">
          <img class="card-img-top" src="/images/{{this.image_url}}" alt="{{this.image_url}}">
        </a>
        <div class="card-body">
          <h5 class="card-title text-center"><a href="/Product/{{this.slug}}">{{this.name}}</a></h5>
          <h4 class="card-text text-center">{{this.price}}₫</h4>

        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>
